<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="15dp"
    android:id="@+id/mainTeacherContainer"
    android:background="@drawable/list_custom"
    android:layout_marginHorizontal="4dp"
    android:layout_marginVertical="7dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:id="@+id/mainTeacherHead" />

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:paddingTop="0dp"
            android:paddingBottom="5dp"
            android:text="Approxed for 2 days"
            android:id="@+id/mainTeacherSubHead" />

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="5dp"
            android:text="Approved by Shweta Bhadari"
            android:id="@+id/mainTeacherApprove" />
        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="5dp"
            android:text="Approved by Shweta Bhadari"
            android:id="@+id/score" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Pending"
        android:textStyle="bold"
        android:textSize="12sp"
        android:textColor="#FFA500"
        android:gravity="center"
        android:textAlignment="center"
        android:id="@+id/mainTeacherStatus" />

</LinearLayout>