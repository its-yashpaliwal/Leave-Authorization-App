<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:text="Student's Sign Up"
        android:textColor="@color/white"
        android:textSize="30dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        app:srcCompat="@drawable/student"
        android:background="@drawable/edit_custom"/>


    <EditText
        android:id="@+id/name_up"
        android:background="@drawable/edit_custom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="25dp"
        android:hint="Name"
        android:textColor="@color/white"
        android:textColorHint="#7C7777" />
    <EditText
        android:id="@+id/name_up_last"
        android:background="@drawable/edit_custom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="25dp"
        android:hint="Last Name"
        android:textColor="@color/white"
        android:textColorHint="#7C7777" />


    <EditText
        android:id="@+id/email_up"
        android:background="@drawable/edit_custom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="25dp"
        android:hint="Email address"
        android:inputType="textEmailAddress"
        android:textColor="@color/white"
        android:textColorHint="#7C7777" />


    <EditText
        android:id="@+id/password_up"
        android:background="@drawable/edit_custom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="25dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="@color/white"
        android:textColorHint="#7C7777" />
    <EditText
        android:id="@+id/roll_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="25dp"
        android:hint="Roll Number"
        android:background="@drawable/edit_custom"
        android:textColor="@color/white"
        android:textColorHint="#7C7777" />



    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/signUpStudent2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:background="@drawable/button_shape"
        android:textColor="@color/white"
        android:text="Register" />
</LinearLayout>